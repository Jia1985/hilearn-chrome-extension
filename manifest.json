{
  "manifest_version": 3,
  "name": "HiLearn",
  "version": "0.1.0",
  "permissions": ["storage", "tabs", "contextMenus", "notifications"],
  "host_permissions": ["<all_urls>"],
  
  "options_ui": {
  "page": "options.html",
  "open_in_tab": true
},

  "background": {
  "service_worker": "background.js"
},

  "action": {
  "default_title": "Translate selection",
  "default_icon": {
    "16": "icon16.png",
    "32": "icon32.png"
  }
},

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "all_frames": true
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}


